<style>
.table-responsive{

  font-family: helvetica;
  font-size: 20px;
}
.product-legends{
  font-family: georgia;
  font-size: 30px;
}
</style>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <div class="container">
   <a role="button" class="btn btn-secondary btn-lg btn-block" style="background-color: #262626;color:lightgray; margin-left: 90%; width: 200pt; font-size: 30px;"href="/admin/student/create">Add  Student</button></a>
  <div class="products">
    <fieldset class="product-fields">
      <legend class="product-legends">
        <strong>S T U D E N T S</strong>
      
      </legend>
      <div class="container">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-design">
            <thead>
              <tr>
            <th>Student Number</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each studentList}}
            <tr>
              <td>{{this.student_id}}</td>
              <td>{{this.prefix}} {{this.first_name}} {{this.middle_name}} {{this.last_name}} {{this.suffix}}</td>
              <td>{{this.email}}</td>
              <td>{{this.phone_number}}</td>
              <td><a href="/admin/faculty/update/#"><img src="/settings.png" style="height:25px; width:25px;"></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>