

<div class="container">
	<div>
    <form action="/admin/class/create" method="post">
  		<div class="panel panel-default">
  			<div class="panel-heading">
  				<h3>Add Class</h3>
  			</div>
  			<div class="panel-body" >
          {{#if success}}
            <div class="alert alert-success">
              {{{success}}}
            </div>  
          {{/if}}
          <div class="form-group">
            <label>Batch</label>
            <select class="form-control" name="batch" required="">
              {{#each year}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label>Section</label>
            <select class="form-control" name="section" required="">
              {{#each section}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label>Adviser</label>
            <select class="form-control" name="advisorId" required="">
              {{#each facultyList}}
                <option value="{{this.id}}">{{this.prefix}} {{this.first_name}} {{this.middle_name}} {{this.last_name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <input type="submit" class="btn form-control btn-success" name="">
          </div>

  			</div>
  		</div>
    </form>
	</div>
</div>